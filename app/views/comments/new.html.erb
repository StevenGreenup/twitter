<div class="container">
    <div class="col-sm-8">
        <%= form_for @comment do |f| %>
        <%= f.label :body %>
        <%= f.text_area :body, class:"form-control" %>
        <%= f.text_field :tweet_id, value: @tweet.id, readonly: true %>
        <%= f.submit %>
        <% end %>
    </div>
</div>
