<div class="background-image-for-sign-in">

  <div class="wrapper">


  <div class="col-sm-9">

  </div>
    <div class="col-sm-3">
        <h2>Sign in</h2>
        <%= form_tag do %>
        <%= label_tag :username %>
        <%= text_field_tag :username,"", class:"form-control" %><br>
        <%= label_tag :password %>
        <%= password_field_tag :password,"", class:"form-control" %><br>
        <%= submit_tag "Sign in" %>
        or
        <%= link_to 'Sign up', new_user_path %>
        <% end %>
    </div>
      </div>
</div>
