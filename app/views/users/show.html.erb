<div class="well">
  <div class="profile">
    <%= image_tag "#{@user.photo_url}" %>

<%= link_to 'People I Am Following', following_path %>
  </div>
</div>

<div class="container">
  <div class="col-sm-2">
    <h2><%= @user.username %></h2>
<br>
  </div>

<div class="col-sm-8">

  <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Tweets</h3>
  </div>
  <div class="panel-body">

    <div class="tweets">
      <% @user.tweets.each do |tweet| %>
        <%= @user.username%>
        <%= image_tag @user.photo_url, size: "35x35", class: "img-rounded"   %>
        <%= tweet.body %>
        <div class="tweet-picture">
        <%= image_tag tweet.picture, class: "img-rounded"  %><br>
        </div>
        <% end %>
    </div>

  </div>
</div>


</div>

  <div class="col-sm-2">

  </div>

</div>
