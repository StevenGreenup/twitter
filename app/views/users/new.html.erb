<div class="container">

  <div class="col-sm-8">

<h2>Sign up</h2>
<%= form_for @user, url: create_user_path do |f| %>
<%= f.label :username %>
<%= f.text_field :username, class:"form-control" %><br>
<%= f.label :photo_url %>
<%= f.text_field :photo_url, class:"form-control", placeholder:"Copy image location"  %><br>
<%= f.label :password %>
<%= f.password_field :password, class:"form-control" %><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class:"form-control" %>
<%= f.submit %>
<% end %>
</div>
</div>
