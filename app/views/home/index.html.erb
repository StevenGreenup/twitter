
<div class="container">


<div class="col-sm-3">
  <div class="profile-content">
    <div class="picture-and-username">

      <%= image_tag @current_user.photo_url, class: "img-rounded"  %>
      <%= @current_user.username %>
      <%= @current_user.id %>
    </div>
    <div class="follower-stats">
      <div class="col-sm-4">
        Tweets  <br>
        <%= @current_user.tweets.count %>
      </div>
      <div class="col-sm-4">
        Following <br>
        <%= @current_user.all_following.count %>
      </div>
      <div class="col-sm-4">
        Followers <br>

        <%= @current_user.followings.count %>
      </div>


    </div>
  </div>

</div>

<div class="col-sm-6">
  <div class="compose-tweet">
    <%= form_for @tweet do |f| %>
    <%= f.text_field :body, class:"form-control", placeholder:"What's happening?" %>
    <%= f.submit "Tweet", class:"form-control" %>
  <% end %>
  </div>
    <div class="tweets">
      <% @current_user.timeline.each do |time| %>
      <div class="tweet">
        <div class="photo_url">
        <%= link_to time.user(id: time.user.id) do %>
        <%= image_tag time.user.photo_url, class: "img-rounded"  %><% end %>
        </div>
        <div class="wrapper">
        <div class="username">
        <%= link_to time.user(id: time.user.id) do %>
        <%= time.user.username %> <% end %>
        </div>
        <div class="body">
        <%= time.body %><br>
        </div>
        </div>
        </div>
          <hr>
        <% end %>
      </div>
  </div>

<div class="col-sm-3">

    <div class="heading">
      Who to follow <%= link_to 'View all', users_path %>
    </div>
    <div class="users-to-follow">
      <% @users.each do |user| %>
<br>
      <%= link_to user_path(id: user.id) do %> <%= image_tag user.photo_url, class: "img-rounded"  %> <% end %>
      <%= link_to user.username, user_path(id: user.id) %>
      <% if @current_user.following?(user) %>
      <%= link_to 'Unfollow', unfollow_path(user_id: user.id), method: :post %>
      <% else %>
      <%= link_to 'Follow', follow_path(user_id: user.id), method: :post %>
<br>
      <% end %>
      <% end %>


    </div>



</div>


</div>
