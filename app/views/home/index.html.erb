
<div class="container">


<div class="col-sm-3">
  <div class="profile-content">
    <div class="picture-and-username">

      <%= image_tag @current_user.photo_url %>
      <%= @current_user.username %>
      <%= @current_user.id %>
    </div>
    <div class="follower-stats">
      <div class="col-sm-4">
        Tweets  <br>
        <%= @current_user.tweets.count %>
      </div>
      <div class="col-sm-4">
        Following <br>
        <%= @current_user.all_following.count %>
      </div>
      <div class="col-sm-4">
        Followers <br>

        <%= @current_user.followings.count %>
      </div>


    </div>
  </div>

</div>

<div class="col-sm-6">


  <div class="timeline">
    <div class="tweet">
      <ul class="body-and-username">
        <% @current_user.timeline.each do |time| %>
        <%= link_to time.user(id: time.user.id) do %>
        <%= image_tag time.user.photo_url %><br> <% end %>
        <li>
        <%= link_to time.user(id: time.user.id) do %>
        <%= time.user.username %><br> <% end %>
        </li>
        <li>
        <%= time.body %><br>
        </li>
        <% end %>
      </ul>
      </div>
    </div>
  </div>

<div class="col-sm-3">

    <div class="heading">
      Who to follow <%= link_to 'View all', users_path %>
    </div>
    <div class="users-to-follow">
      <% @users.each do |user| %>
<br>
      <%= link_to user_path(id: user.id) do %> <%= image_tag user.photo_url %> <% end %>
      <%= link_to user.username, user_path(id: user.id) %>
      <% if @current_user.following?(user) %>
      <%= link_to 'Unfollow', unfollow_path(user_id: user.id), method: :post %>
      <% else %>
      <%= link_to 'Follow', follow_path(user_id: user.id), method: :post %>
<br>
      <% end %>
      <% end %>


    </div>



</div>


</div>
