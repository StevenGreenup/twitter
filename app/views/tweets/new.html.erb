<div class="container">
    <div class="col-sm-8">
        <%= form_for @tweet do |f| %>
        <%= f.label :body %>
        <%= f.text_area :body, class:"form-control" %>
        <%= f.label :picture %>
        <%= f.text_field :picture, class:"form-control", placeholder: "Paste image location URL here" %>
        <%= f.submit %>
        <% end %>
    </div>
</div>
